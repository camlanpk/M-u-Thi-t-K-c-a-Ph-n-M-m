@model WebApplication3.Models.Customer

@{
    ViewBag.Title = "Đăng Nhập";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div style="margin: 100px auto; width: 50%;">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="container" style="margin-top: 120px;">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="card shadow" style="background-color: #f8f9fa; border-radius: 15px; box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.1);">
                        <div class="card-header bg-primary text-white" style="border-top-left-radius: 15px; border-top-right-radius: 15px;">
                            <h2 style="color: white; margin-right: 151px; font-family: 'Arial', sans-serif; font-size: 36px; font-weight: bold; text-transform: uppercase; letter-spacing: 2px; text-shadow: 2px 2px 2px rgba(0, 0, 0, 0.5);">Đăng Nhập</h2>
                        </div>
                        <div class="card-body">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            <div class="form-group">
                                @Html.LabelFor(model => model.NameCus, "Tên của bạn", htmlAttributes: new { @class = "control-label" })
                                @Html.EditorFor(model => model.NameCus, new { htmlAttributes = new { @class = "form-control", style = "border-radius: 10px;" } })
                                @Html.ValidationMessageFor(model => model.NameCus, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.PassCus, "Vui lòng nhập mật khẩu của bạn", htmlAttributes: new { @class = "control-label" })
                                @Html.EditorFor(model => model.PassCus, new { htmlAttributes = new { @class = "form-control", style = "border-radius: 10px;" } })
                                @Html.ValidationMessageFor(model => model.PassCus, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group text-center">
                                <input type="submit" value="Đăng Nhập" class="btn btn-primary" style="border-radius: 10px; width: 40%; font-family: 'Arial', sans-serif; font-weight: bold; font-size: 18px; box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);" />
                            </div>
                            <div class="container text-center mt-3">
                                <a href="@Url.Action("ForgotPassword", "Users")" class="btn btn-outline-secondary" style="border-radius: 10px; margin-right: 10px;">Quên mật khẩu?</a>
                                <a href="@Url.Action("Register", "Users")" class="btn btn-outline-secondary" style="border-radius: 10px;">Đăng Ký</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <h3>@ViewBag.ThongBao</h3>
    }
</div>
