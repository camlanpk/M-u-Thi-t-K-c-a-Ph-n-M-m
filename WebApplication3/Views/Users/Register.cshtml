@model WebApplication3.Models.Customer

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div style="margin: 100px auto; width: 50%;">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="container" style="margin-top: 120px;">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="card shadow" style="background-color: whitesmoke; border-radius: 15px; box-shadow: 5px 5px 15px rgba(0, 0, 0, 0.2);">
                        <div class="card-header bg-primary text-white" style="border-top-left-radius: 15px; border-top-right-radius: 15px;">
                            <h2 style="color: white; margin-right: 151px; font-family: 'Georgia', serif; font-size: 36px; font-weight: bold; text-transform: uppercase; letter-spacing: 2px; text-shadow: 2px 2px 2px rgba(0, 0, 0, 0.5);">Đăng ký</h2>
                        </div>
                        <div class="card-body">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            <div class="form-group">
                                @Html.LabelFor(model => model.NameCus, "Tên của bạn", htmlAttributes: new { @class = "control-label" })
                                @Html.EditorFor(model => model.NameCus, new { htmlAttributes = new { @class = "form-control", style = "border-radius: 10px;" } })
                                @Html.ValidationMessageFor(model => model.NameCus, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.EmailCus, "Email", htmlAttributes: new { @class = "control-label" })
                                @Html.EditorFor(model => model.EmailCus, new { htmlAttributes = new { @class = "form-control", style = "border-radius: 10px;" } })
                                @Html.ValidationMessageFor(model => model.EmailCus, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.PassCus, "Mật khẩu", htmlAttributes: new { @class = "control-label" })
                                @Html.EditorFor(model => model.PassCus, new { htmlAttributes = new { @class = "form-control", style = "border-radius: 10px;" } })
                                @Html.ValidationMessageFor(model => model.PassCus, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.PhoneCus, "Điện thoại", htmlAttributes: new { @class = "control-label" })
                                @Html.EditorFor(model => model.PhoneCus, new { htmlAttributes = new { @class = "form-control", style = "border-radius: 10px;" } })
                                @Html.ValidationMessageFor(model => model.PhoneCus, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.AddressCus, "Địa chỉ", htmlAttributes: new { @class = "control-label" })
                                @Html.EditorFor(model => model.AddressCus, new { htmlAttributes = new { @class = "form-control", style = "border-radius: 10px;" } })
                                @Html.ValidationMessageFor(model => model.AddressCus, "", new { @class = "text-danger" })
                            </div>

                            <input type="submit" value="Xác nhận" class="btn btn-primary btn-block" style="border-radius: 10px; width: 40%; margin-left: 100px; box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2); font-family: 'Arial', sans-serif; font-weight: bold; font-size: 16px;" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <h3>@ViewBag.ThongBao</h3>
    }
</div>
