
@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<body>
    <!-- ***** Main Banner Area Start ***** -->
    <div class="page-heading about-page-heading" id="top">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="inner-content">
                        <h2>Liên Hệ</h2>
                        <span>Khám phá một Trải nghiệm Tuyệt vời, Sáng tạo & Mới lạ</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- ***** Main Banner Area End ***** -->
    <!-- ***** Contact Area Starts ***** -->
    <div class="contact-us">
        <div class="container">
            <div class="row">
                <!-- Map Section -->
                <div class="col-lg-6">
                    <img src="~/Images/map.png" style="width: 545px; height: 545px; object-fit: cover;" />
                </div>

                <!-- Contact Form Section -->
                <div class="col-lg-6" style="margin-top:36px;">
                    <div class="section-heading">
                        <h2>Chào bạn. Đừng ngần ngại!</h2>
                        <span>Chúng tôi chú trọng vào chi tiết là điều làm nên sự khác biệt so với các chủ đề khác.</span>
                    </div>
                    <form id="contact" action="" method="post">
                        <div class="row">
                            <div class="col-lg-6">
                                <fieldset>
                                    <input name="name" type="text" id="name" placeholder="Họ và tên của bạn" required="">
                                </fieldset>
                            </div>
                            <div class="col-lg-6">
                                <fieldset>
                                    <input name="email" type="text" id="email" placeholder="Email của bạn" required="">
                                </fieldset>
                            </div>
                            <div class="col-lg-12">
                                <fieldset>
                                    <textarea name="message" rows="6" id="message" placeholder="Tin nhắn của bạn" required=""></textarea>
                                </fieldset>
                            </div>
                            <div class="col-lg-12">
                                <fieldset>
                                    <button type="submit" id="form-submit" class="main-dark-button"><i class="fa fa-paper-plane"></i> Gửi Tin Nhắn</button>
                                </fieldset>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- ***** Contact Area Ends ***** -->
    <!-- ***** Subscribe Area Starts ***** -->
    <div class="subscribe">
        <!-- Content Here... -->
    </div>
    <!-- ***** Subscribe Area Ends ***** -->
    <!-- jQuery and Other Scripts -->
    <!-- Script imports here... -->
</body>

