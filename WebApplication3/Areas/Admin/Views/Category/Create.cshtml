@model WebApplication3.Models.Category

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_MainLayOutADMIN.cshtml";
}

<div style="margin: 10px auto; width: 40%; padding: 20px; border: 1px solid #ccc; border-radius: 5px; background-color: #f9f9f9;">
    <h2 style="text-align: center; color: #333;">TẠO MỚI CATEGORY</h2>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <label class="control-label">MÃ CATEGORY</label>
                <div style="border: 1px solid black; border-radius: 5px;">
                    <!-- Sử dụng thuộc tính type="number" và min="0" -->
                    @Html.EditorFor(model => model.IDCate, new { htmlAttributes = new { @class = "form-control", @type = "number", @min = "0" } })
                    @Html.ValidationMessageFor(model => model.IDCate, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label">TÊN CATEGORY</label>
                <div style="border: 1px solid black; border-radius: 5px;">
                    @Html.EditorFor(model => model.NameCate, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NameCate, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="mt-3">
                    <input type="submit" value="TẠO MỚI" class="btn btn-primary" />
                </div>
            </div>
        </div>
    }

    <div style="margin-top: 20px; text-align: center;">
        @Html.ActionLink("TRỞ LẠI", "Index", null, new { @class = "btn btn-secondary" })
    </div>
</div>



