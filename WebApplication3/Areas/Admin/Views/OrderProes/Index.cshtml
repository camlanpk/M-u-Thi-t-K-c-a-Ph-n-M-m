@model IEnumerable<WebApplication3.Models.OrderPro>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_MainLayOutADMIN.cshtml";
}




<table class="table table-striped table-bordered" style="width:70%;margin-left:300px;">
    <thead class="thead-dark">
        <tr>
            <th style="font-family: Georgia;">Ngày đặt hàng</th>
            <th style="font-family: Georgia;">Địa chỉ giao hàng</th>
            <th style="font-family: Georgia;">Tên Khách hàng</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.DateOrder)</td>
                <td>@Html.DisplayFor(modelItem => item.AddressDelivery)</td>
                <td>@Html.DisplayFor(modelItem => item.Customer.NameCus)</td>
                <td>

                    @Html.ActionLink("Details", "Details", new { id = item.ID }, new { @class = "btn btn-info btn-sm" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { @class = "btn btn-danger btn-sm" })
                </td>
            </tr>
        }
    </tbody>
</table>

